@model BlogOn.Models.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="blog-post">
    <h2 class="blog-post-title">@ViewData["Title"]</h2>
    <p>
        <form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input placeholder="E-Mail" style="border-radius: 0" class="form-control" asp-for="Email" autocomplete="off">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input placeholder="Password" style="border-radius: 0" class="form-control" asp-for="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button style="border-radius: 0" class="btn btn-secondary btn-block">Sign in</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <small>
                        <a asp-action="Register" asp-controller="Account">Do not have an account? Sign Up.</a>
                    </small>
                </div>
            </div>
        </form>
    </p>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}