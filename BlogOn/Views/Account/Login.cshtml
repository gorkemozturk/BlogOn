@model BlogOn.Models.ViewModels.Account.LoginViewModel
@{ 
    ViewData["Title"] = "Login";
}

<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="text-center post-heading">
                    <h1>@ViewData["Title"]</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-5 mx-auto">
            <form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h1>Login</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input placeholder="E-Mail" style="border-radius: 0" class="form-control" asp-for="Email" autocomplete="off">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input placeholder="Password" style="border-radius: 0" class="form-control" asp-for="Password">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-lg btn-primary btn-block">Sign in</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <small>
                            <a asp-action="Register" asp-controller="Account">Do not have an account? Sign Up.</a>
                        </small>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

