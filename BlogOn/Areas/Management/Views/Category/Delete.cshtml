@model BlogOn.Models.Category
@{
    ViewData["Title"] = "DELETE THE EXISTING CATEGORY";
}

<div class="row">
    <div class="col-md-12">
        <div style="border-radius: 2px" class="card">
            <div class="card-header">
                <h6 class="title">@ViewData["Title"]</h6>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create" asp-antiforgery="true">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input readonly class="form-control" asp-for="Name" autocomplete="off">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group form-check">
                                <input disabled type="checkbox" class="form-check-input" asp-for="IsActive">
                                <label class="form-check-label" asp-for="IsActive"></label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button asp-route-id="@Model.ID" type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-default">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>